generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model imoveis {
  idimovel        Int       @id @default(autoincrement())
  price           Decimal   @db.Decimal(12, 2)
  title           String    
  description     String?   
  district        String    
  street          String?   
  city            String    
  house_number    String?   
  area            Decimal   @db.Decimal(6, 2)
  monthly_payment Decimal?  @db.Decimal(12, 2)
  bedrooms        Int?
  suites          Int?
  bathrooms       Int?
  garages         Int?
  created_at      DateTime? @default(now()) @db.Timestamp(0)
  updated_at      DateTime? @default(now()) @db.Timestamp(0)
  finality        String    
  imovel_type     String    
  photos          photos[]
}

model photos {
  idphoto  Int     @id @default(autoincrement())
  idimovel Int
  codepic  String  
  imoveis  imoveis @relation(fields: [idimovel], references: [idimovel], onDelete: NoAction, onUpdate: NoAction, map: "photos_ibfk_1")

  @@index([idimovel], map: "idimovel")
}

model users {
  id          Int     @id @default(autoincrement())
  name        String
  email       String  @unique
  password    String
  permission  String?
  created_at      DateTime? @default(now()) @db.Timestamp(0)
  updated_at      DateTime? @default(now()) @db.Timestamp(0)
}
